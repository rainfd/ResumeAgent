# Resume Assistant Configuration Example
# Copy this file to .env and fill in your actual values

# AI Service Configuration
RESUME_ASSISTANT_DEEPSEEK_API_KEY=your_deepseek_api_key_here
RESUME_ASSISTANT_DEEPSEEK_BASE_URL=https://api.deepseek.com

# Database Configuration
RESUME_ASSISTANT_DATABASE_PATH=~/.resume_assistant/data.db

# Cache Configuration
RESUME_ASSISTANT_CACHE_DIR=~/.resume_assistant/cache
RESUME_ASSISTANT_CACHE_TTL=3600

# Scraper Configuration
RESUME_ASSISTANT_REQUEST_TIMEOUT=30
RESUME_ASSISTANT_MAX_RETRIES=3

# UI Configuration
RESUME_ASSISTANT_THEME=dark
RESUME_ASSISTANT_AUTO_SAVE=true

# Logging Configuration
RESUME_ASSISTANT_LOG_LEVEL=INFO
RESUME_ASSISTANT_LOG_FILE=~/.resume_assistant/logs/app.log